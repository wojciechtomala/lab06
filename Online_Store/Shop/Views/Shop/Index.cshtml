@model IEnumerable<Shop.Models.ShopItem>

@{
    ViewData["Title"] = "Online Store Items";
}

<h1>Administrator Panel</h1>

<p>
    <a asp-action="Create" class="create-new-btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="buttons-container">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img class="productImage" src="@Html.DisplayFor(modelItem => item.imgURL)" alt="item.Name"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="buttons-container">
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  })
                @Html.ActionLink("Details", "Details", new {  id=item.Id  })
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
